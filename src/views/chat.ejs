<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <title>Chat</title>
  <style>
    .chatbox {
      height: 600px;
      overflow-y: scroll;
      padding: 10px;
      background: #fff3;
    }
    .message {
      border-radius: 10px;
      max-width: 80%;
      margin-top: 15px;
      padding: 5px 10px;
      display: inline-block;
    }
    .send {
      text-align: right;
    }
    .send .message {
      background-color: #62f784;
    }
    .receive .message {
      background: #e6e6e6;
    }
    html,body{
      height: 100%;
    }
    .background {
      background: url('https://d2v9y0dukr6mq2.cloudfront.net/video/thumbnail/Vjkyj2hBg/sand-clock-flat-shape-animation-on-blue-background-old-time_bt4kfp1q__F0005.png');
      height: 100%;
      background-size: cover;
    }
    .chatbox-text {
      width: 80%;
    }
    .chatbox-button {
      width: 20%;
    }
    .chatbox-button button, .chatbox-text textarea {
      height: 50px;
    }
    .btn-send {
      color: #fff;
      background-color: var(--blue);
      border-color: var(--blue);
    }
  </style>
</head>
<body>
  <div class="background">
    <div class="container" style="display: none">
      <div class="row">
        <div class="col-6 offset-md-3 mt-5">
          <div class="chatbox">
          </div>
          <div>
            <div class="d-flex">
              <div class="form-group mb-0 chatbox-text">
                <textarea class="form-control rounded-0" placeholder="Message" id="message"></textarea>
              </div>
              <div class="form-group chatbox-button">
                <button class="btn btn-send w-100 rounded-0" id="btnSend" type="button">Gá»­i</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="https://code.jquery.com/jquery-1.11.1.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script>
    $(function () {
      var socket = io();
      let url = (window.location.href).split('/');
      let hash = url[url.length - 1];
      var chatbox = $('.chatbox');
      if (!localStorage.getItem('username')) {
        window.location = '/enter-info/' + hash;
      }
      if (!localStorage.getItem(hash)) {
        window.location = '/enter-info/' + hash;
      }
      $.ajax({
        method: 'POST',
        url: '/join-room',
        dataType: 'json',
        contentType: 'application/json',
        traditional: true,
        data: JSON.stringify({
          room: hash,
          password: localStorage.getItem(hash)
        }),
        success: (result) => {
          if (result.isValid === false) {
            window.location = '/';
          } else {
            $('.container').show();
            getMessage();
          }
        }
      });
      $('#btnSend').click(function () {
        sendMessage();
      });
      $('#message').keyup(function (event) {
        if (event.keyCode === 13) {
          sendMessage();
        }
      });
      socket.on('message_' + hash, (msg) => {
        
        if (msg.username === localStorage.getItem('username')) {
          chatbox.append(`
            <div class="send">
              <div class="message">
                ${msg.message}
              </div>
            </div>
          `);
        } else {
          chatbox.append(`
            <div class="receive">
              <div class="message">
                <b>${msg.username}</b><br>
                ${msg.message}
              </div>
            </div>
          `);
        }
        chatbox.scrollTop(chatbox.get(0).scrollHeight);
      });

      function sendMessage() {
        let name = localStorage.getItem('username');
        let messageInput = $('#message');
        message = messageInput.val().trim();
        if (message == '' || !message) {
          return;
        }
        socket.emit('chat', {
          room: hash,
          name: name,
          message: message
        });
        messageInput.val('');
      }

      function getMessage() {
        $.ajax({
          method: 'POST',
          url: '/get-message',
          dataType: 'json',
          contentType: 'application/json',
          traditional: true,
          data: JSON.stringify({
            room: hash,
            password: localStorage.getItem(hash)
          }),
          success: (result) => {
            if (result.isValid === false) {
              window.location = '/';
            } else {
              let html = '';
              for(let message of result.messages) {
                if (message.username === localStorage.getItem('username')) {
                  html += `<div class="send">
                              <div class="message">
                                ${message.message}
                              </div>
                            </div>`;
                } else {
                  html += `<div class="receive">
                              <div class="message">
                                <b>${message.username}</b><br>
                                ${message.message}
                              </div>
                            </div>`;
                }
                $('.chatbox').html(html);
                chatbox.scrollTop(chatbox.get(0).scrollHeight);
              }
            }
          }
        });
      }
    });
  </script>
</body>
</html>